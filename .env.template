# MTG EcoRec - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# Flask Application
# ================================
FLASK_SECRET_KEY=your-very-long-secret-key-change-this-in-production-at-least-32-characters
FLASK_ENV=development
FLASK_DEBUG=True

# ================================
# Azure Cosmos DB (MongoDB API)
# ================================
COSMOS_CONNECTION_STRING=mongodb://your-cosmosdb-account:your-key@your-account.mongo.cosmos.azure.com:10255/?ssl=true&retrywrites=false&maxIdleTimeMS=120000&appName=@your-account@
COSMOS_DB_NAME=mtgecorec
COSMOS_CONTAINER_NAME=cards

# ================================
# Scoring System (Phase 2)
# ================================
# Set to 'true' to enable new CardScorer-based recommendations
# Set to 'false' to use legacy synergy-based system
USE_NEW_SCORING=true

# ================================
# AI Features (Optional)
# ================================
# Perplexity AI for card suggestions and deck analysis
PERPLEXITY_API_KEY=your-perplexity-api-key-here
AI_QUERIES_LIMIT=50  # Monthly limit per user

# ================================
# Databricks (Optional - for pricing pipeline)
# ================================
DATABRICKS_HOST=adb-your-workspace-id.azuredatabricks.net
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id
DATABRICKS_TOKEN=your-databricks-personal-access-token

# ================================
# Azure Functions (Optional - for automated pricing updates)
# ================================
DEFAULT_BATCH_SIZE=100000

# ================================
# Development/Testing
# ================================
# Set to 'true' for verbose logging
DEBUG_LOGGING=false
